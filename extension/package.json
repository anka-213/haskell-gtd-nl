{
  "name": "haskell-gtd-nl",
  "displayName": "Haskell 'go to non-local definitions' extension",
  "publisher": "kr3v",
  "description": "",
  "version": "0.3.0",
  "engines": {
    "vscode": "^1.79.0"
  },
  "categories": [
    "Other"
  ],
  "license": "MIT",
  "activationEvents": [
    "onLanguage:haskell",
    "onLanguage:Hsc2Hs"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": [
      {
        "title": "haskell-gtd-nl configuration",
        "properties": {
          "haskell-gtd-nl.extension.disable-local-definitions-when-hls-is-active": {
            "type": "boolean",
            "default": true,
            "description": "If HLS is active, this extension's local definitions will be disabled, as they are often out of sync with HLS (meaning you would see two definitions for local symbols). Does not affect behaviour for symbols resolved outside of current working directory."
          },
          "haskell-gtd-nl.server.root": {
            "type": "string",
            "default": "~/.local/share/haskell-gtd-nl"
          },
          "haskell-gtd-nl.server.path": {
            "type": "string",
            "default": "./haskell-gtd-nl-server"
          },
          "haskell-gtd-nl.parser.path": {
            "type": "string",
            "default": "./haskell-gtd-nl-parser"
          },
          "haskell-gtd-nl.server.args": {
            "type": "array",
            "default": [
              "--ttl",
              "60",
              "--dynamic-memory-usage"
            ]
          },
          "haskell-gtd-nl.parser.args": {
            "type": "array",
            "default": []
          }
        }
      }
    ],
    "commands": [
      {
        "command": "haskell-gtd-nl.server.restart",
        "title": "haskell-gtd-nl: kill/stop backend server (it will be restarted automatically when a Haskell file is opened)"
      },
      {
        "command": "haskell-gtd-nl.cpphs",
        "title": "haskell-gtd-nl: applies `cpphs` to the current file"
      }
    ],
    "languages": [
      {
        "id": "haskell",
        "extensions": [
          ".hs"
        ]
      },
      {
        "id": "Hsc2Hs",
        "extensions": [
          ".hsc"
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile; yarn run package",
    "compile": "tsc -p ./",
    "package": "webpack --mode production --devtool hidden-source-map",
    "webpack": "webpack --mode development",
    "webpack-dev": "webpack --mode development --watch",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "pretest": "yarn run compile && yarn run lint",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.79.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "esbuild": "^0.18.20",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "axios": "^1.4.0"
  }
}
