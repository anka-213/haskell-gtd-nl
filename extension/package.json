{
  "name": "hs-gtd",
  "displayName": "hs-gtd",
  "publisher": "kr3v",
  "description": "",
  "version": "0.2.5",
  "engines": {
    "vscode": "^1.79.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:haskell"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": [
      {
        "title": "hs-gtd configuration",
        "properties": {
          "hs-gtd.extension.disable-local-definitions-when-hls-is-active": {
            "type": "boolean",
            "default": true,
            "description": "If HLS is active, this extension's local definitions will be disabled, as they are often out of sync with HLS (meaning you would see two definitions for local symbols). Does not affect behaviour for symbols resolved outside of current working directory."
          },
          "hs-gtd.server.root": {
            "type": "string",
            "default": "~/.local/share/haskell-gtd-extension-server-root"
          },
          "hs-gtd.server.path": {
            "type": "string",
            "default": "./haskell-gtd-server"
          },
          "hs-gtd.package.path": {
            "type": "string",
            "default": "./haskell-gtd-server"
          },
          "hs-gtd.server.args": {
            "type": "array",
            "default": [
              "--ttl",
              "60",
              "--dynamic-memory-usage"
            ]
          },
          "hs-gtd.package.args": {
            "type": "array",
            "default": []
          }
        }
      }
    ],
    "commands": [
      {
        "command": "hs-gtd.server.restart",
        "title": "hs-gtd: kill/stop backend server (it will be restarted automatically when a Haskell file is opened)"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.79.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "esbuild": "^0.18.7",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "webpack": "^5.88.0"
  }
}
